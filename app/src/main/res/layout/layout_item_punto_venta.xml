<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/viewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textColor="@color/negro"/>

            <TextView
                android:id="@+id/textoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/negro"
                android:textSize="25sp"
                tools:text="Florida"
                android:layout_toRightOf="@id/viewNombre"/>

            <TextView
                android:id="@+id/viewDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direccion"
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textColor="@color/negro"
                android:layout_below="@id/textoNombre"/>

            <TextView
                android:id="@+id/textoDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/negro"
                android:textSize="25sp"
                tools:text="Av San MartÃ­n 3055"
                android:layout_toRightOf="@id/viewDireccion"
                android:layout_below="@id/textoNombre"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
